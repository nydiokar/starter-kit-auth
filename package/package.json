{
  "name": "@lean-kit/auth",
  "version": "0.1.0",
  "description": "Lean Auth for NestJS (opaque sessions, RBAC, CSRF)",
  "keywords": ["auth", "nestjs", "prisma", "redis", "csrf", "rbac"],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "test": "npm run test:ci",
    "test:unit": "jest tests/unit",
    "test:int": "jest tests/integration",
    "test:pack": "jest tests/pack",
    "test:ci": "npm run test:unit && npm run test:int && npm run test:pack",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:setup": "npm run test:prisma:generate && npm run test:prisma:push",
    "test:prisma:generate": "prisma generate --schema=tests/prisma/schema.prisma",
    "test:prisma:push": "prisma db push --schema=tests/prisma/schema.prisma"
  },
  "peerDependencies": {
    "@nestjs/common": "^10",
    "@nestjs/core": "^10",
    "@prisma/client": ">=5",
    "ioredis": ">=5",
    "class-transformer": ">=0.5.1",
    "class-validator": ">=0.14.0",
    "@aws-sdk/client-ses": ">=3"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-ses": {
      "optional": true
    }
  },
  "dependencies": {
    "argon2": "^0.31.2",
    "cookie": "^0.6.0",
    "nodemailer": "^6.9.11"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.15",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "supertest": "^6.3.0",
    "ioredis-mock": "^8.9.0",
    "rimraf": "^5.0.0",
    "prisma": "^5.0.0"
  }
}
